System.out.println("********** Declaracion de variables **********");

System.out.println("1. Manejo de entornos");

System.out.println("1.1 Variable redeclarada en un entorno diferente");

int b = 10;

if (true) {
    // No hay error porque se encuentra en un entorno diferente.
    int b = 20;
    System.out.println(b); // 20
}

System.out.println(b); // 10
System.out.println("");

System.out.println("1.2 Uso de variable en un entorno superior");

int c = 10;
int d = 10;

if (true) {
    int d = 20;
    System.out.println(c); // 10
    System.out.println(d); // 20

    c = 30;
    d = 30;
}

System.out.println(c); // 30
System.out.println(d); // 10
System.out.println("");

